{
    "$schema": "https://figma.com/tokens.schema.json",
    "metadata": {
        "name": "WorldChat SM2 Messaging UI Tokens",
        "version": "1.0",
        "source": "docs/operations/ui-guidelines.md"
    },
    "colors": {
        "sentBubble": "#2563EB",
        "receivedBubble": "#F3F4F6",
        "sentText": "#FFFFFF",
        "receivedText": "#111827",
        "presence": "#10B981",
        "accentBadge": "#38BDF8",
        "background": "#FFFFFF",
        "surface": "#F9FAFB",
        "border": "#E5E7EB",
        "textPrimary": "#0F172A",
        "textMuted": "#475569"
    },
    "radius": {
        "bubble": 16,
        "input": 12,
        "avatar": 20
    },
    "spacing": {
        "grid": 4,
        "bubblePaddingX": 12,
        "bubblePaddingY": 10,
        "screenPadding": 16,
        "listItemPaddingY": 12,
        "listItemPaddingX": 16
    },
    "typography": {
        "title": {
            "size": 17,
            "lineHeight": 22,
            "weight": 600
        },
        "subtitle": {
            "size": 12,
            "lineHeight": 16,
            "weight": 400
        },
        "body": {
            "size": 16,
            "lineHeight": 22,
            "weight": 400
        },
        "badge": {
            "size": 12,
            "lineHeight": 16,
            "weight": 600
        }
    },
    "motion": {
        "send": {
            "durationMs": 120,
            "easing": "ease-in-out"
        },
        "receive": {
            "durationMs": 120,
            "easing": "ease-in-out"
        },
        "typing": {
            "durationMs": 250,
            "easing": "ease-in-out"
        },
        "refresh": {
            "durationMs": 300,
            "easing": "ease-in-out"
        }
    }
}